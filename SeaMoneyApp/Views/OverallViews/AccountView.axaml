<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:local="clr-namespace:SeaMoneyApp.Localization"
             xmlns:c="clr-namespace:SeaMoneyApp.Components"
             xmlns:overalViewModels="clr-namespace:SeaMoneyApp.ViewModels.OverallViewModels"

             x:DataType="overalViewModels:AccountViewModel"
             
             x:Class="SeaMoneyApp.Views.OverallViews.AccountView">
   <DockPanel VerticalAlignment="Top" MaxWidth="450">
       <TextBlock DockPanel.Dock="Top" 
                  HorizontalAlignment="Center"
                  Text="{Binding CurrentState}"
                  Foreground="MediumBlue"
                  FontWeight="Bold"
                  FontSize="20" />
       <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
           <Label Content="{x:Static local:Localization.GeneralInfoText}"/>
           <c:InputComponent IsReadOnly="{Binding !IsEditing}"
                             Label="{x:Static local:Localization.LoginText}"
                             Value="{Binding CurrentAccount.Login}"/>
           
           <Grid>
               <StackPanel Orientation="Vertical">
                   <Label Content="{x:Static local:Localization.PositionText}"/>
                   <AutoCompleteBox 
                       IsEnabled="{Binding IsEditing}"
                       ItemsSource="{Binding Positions}"
                       SelectedItem="{Binding ViewedPosition}"
                       FilterMode="Contains"/>
               </StackPanel>
           </Grid>
           
           <c:InputComponent IsReadOnly="{Binding !IsEditing}"
                             Label="{x:Static local:Localization.ToursInRankText}"
                             Value="{Binding CurrentAccount.ToursInRank}"/>
          
       </StackPanel>
       <TextBlock DockPanel.Dock="Top"
                  Text="{Binding ErrorMessage}"
                  Foreground="Coral"
                  FontWeight="Bold"
                  FontSize="20" />
       <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
           <Button Content="{x:Static local:Localization.EditText}" 
                   Command="{Binding EditAccountCommand}" Classes="btn-primary" />
           <Button Content="{x:Static local:Localization.SaveText}" 
                   Command="{Binding SaveAccountCommand}" Classes="btn-success" />
           <Button Content="{x:Static local:Localization.CancelText}" 
                   Command="{Binding CancelEditAccountCommand}" Classes="btn-secondary" />
           <Button DockPanel.Dock="Top" 
                   Content="{x:Static local:Localization.LogoutText}" 
                   Command="{Binding LogOutCommand}"
                   Classes="btn-danger"
                   Margin="30,0,0,0"/>
           
       </StackPanel>
       <Button DockPanel.Dock="Top" 
               HorizontalAlignment="Center"
               
               Content="{x:Static local:Localization.AdminPanelText}" 
               Command="{Binding ToAdminPanelCommand}"
               IsVisible="{Binding AppSession.IsAdmin}"
               Classes="btn-admin-panel"
               Margin="0,10,0,0"/>
   </DockPanel>
</UserControl>
