<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

             xmlns:viewModels="clr-namespace:SeaMoneyApp.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:SearchViewModel, IsDesignTimeCreatable=True}"
             
             x:DataType="viewModels:SearchViewModel"
             
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SeaMoneyApp.Views.SearchView">
    <Grid>
        <TextBlock Text="{Binding CurrentAccount.Login, StringFormat=\{0:f0\} Добро пожаловать!}"></TextBlock>
    </Grid>
</UserControl>